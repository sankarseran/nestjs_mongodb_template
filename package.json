    "@nestjs/websockets": "^6.0.5",
    "@types/joi": "^14.3.2",
    "@types/mongoose": "^4.7.45",
    "@types/passport-local-mongoose": "^4.0.12",
    "bcrypt": "^3.0.6",
    "class-validator": "^0.14.0",
    "config": "^3.1.0",
