    "jsonwebtoken": "^8.5.1",
    "md5": "^2.2.1",
    "mongoose": "^5.5.12",
    "nest-winston": "^1.0.2",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local-mongoose": "^5.0.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "socket.io": "^2.2.0",
    "swagger-ui-express": "^4.0.2",
    "ts-md5": "^1.2.4",
    "winston": "^3.2.1"
